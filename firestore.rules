rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Development rules - Very permissive for testing
    // Allow read/write for all authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow public read access to businesses and customer classes for QR signup
    match /businesses/{businessId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /customerClasses/{classId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}